@model List<BloggWeb.Models.Domain.BlogPost>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">

        <h1> List Of BlogPost - Finctionality</h1>
    </div>
</div>


<div class="container py-5">

    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Heading</td>
                <td>PageTitle</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var blogPost in Model)
            {
                <tr>
                    <td>@blogPost.Id</td>
                    <td>@blogPost.Heading</td>
                    <td>@blogPost.PageTitle</td>
                    <td class="d-flex">
                        @foreach(var tag in blogPost.Tags)//have a multiple tags in blogPost
                        {
                            <span class="bage bg-success me-1">@tag.Name</span>
                        }
                    </td>
                    <td>
                        <a asp-area="" asp-controller="AdminBlogPost" 
                        asp-action="Edit"
                        asp-route-id="@blogPost.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>