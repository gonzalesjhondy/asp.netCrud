@model BloggWeb.Models.modelView.EditTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">

        <h1> Update Tag - Admin Finctionality</h1>
    </div>
</div>

<div class="container py-5">

    @if(Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="col-form-label">Id</label>
                <input type="text" id="id" class="form-control" asp-for="Id" readonly>
            </div>

            <div class="mb-3">
                <label class="col-form-label">Name</label>
                <input type="text" id="Name" class="form-control" asp-for="Name">
            </div>

            <div class="mb-3">
                <label class="col-form-label">DisplayName</label>
                <input type="text" id="DisplayName" class="form-control" asp-for="DisplayName">
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark"> Update </button>
            </div>

        </form>
    }
    else
    {
        <p> Tag not found</p>
    }

   

</div>