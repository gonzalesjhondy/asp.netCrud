}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">

        <h1>Show All Tags - Admin Finctionality</h1>
    </div>
</div>

<div class="container" py-5>
    @if(Model != null && Model.Any()) //Model is alraedy defined sa babaw mao na nag handle mga data gikan sa model, sa capital ang M sa model siya003
    {

        <table id="example" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>DisplayName</th>
                    <th>CategoryTag</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in Model)
           


                {
                    <tr> 
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td><a class="btn btn-outline-primary" asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-id="@tag.Id">Update</a></td>
                        <!--Importanat line-->
                        <!--<td><a class="btn btn-outline-danger" asp-area="" asp-controller="AdminTags" asp-action="Delete" asp-route-id="@tag.Id">Delete</a></td> -->
                         <td>
                          @Html.ActionLink("Delete", "Delete", new { id=tag.Id }, new { @class="btn btn-outline-danger element", @data_toggle = "modal", @data_target = "#exampleModal" })
                            @Html.Hidden("TagId", "", new { id = "TagId" })
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    }
    else
    {
        <p class="strong p-5">No Tags Found! </p>
    }
</div>



